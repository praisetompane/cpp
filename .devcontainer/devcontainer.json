{
  "name": "c++",
  "image": "mcr.microsoft.com/vscode/devcontainers/cpp",
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.lldb-dap",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "vadimcn.vscode-lldb"
      ],
      "settings": {}
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/cpp,type=bind,consistency=delegated",
  "workspaceFolder": "/cpp"
}